{
  schema,
  [
    {version, "1.1"},
    {default_field, "e"},
    {default_op, "or"},
    {n_val, 3},
    {analyzer_factory, {erlang, text_analyzers, whitespace_analyzer_factory}}
  ],
  [
    %% db.mapper version field, ignore
    {field, [
      {name, "_V"},
      {skip, true}
    ]},

    %% Alias
    {field, [
      {name, "a"},
      {analyzer_factory, {erlang, text_analyzers, noop_analyzer_factory}}
    ]},

    %% E-mail
    {field, [
      {name, "e"},
      {analyzer_factory, {erlang, text_analyzers, noop_analyzer_factory}}
    ]},

    %% Password, ignore it
    {field, [
      {name, "p"},
      {skip, true}
    ]},

    %% Role
    %% This is a list of role IDs, ignore it
    {field, [
      {name, "r"},
      {skip, true}
    ]},

    %% Login identity
    {field, [
      {name, "login"},
      {alias, "a"},
      {alias, "e"}
    ]}
  ]
}.


